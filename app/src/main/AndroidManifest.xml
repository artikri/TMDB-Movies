<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TMDBApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TMDBMovies">
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TMDBMovies">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.details.MovieDetailsActivity"
            android:exported="true"
            android:label="Movie Details"
            android:theme="@style/Theme.TMDBMovies">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="tmdbmovies" android:host="movie" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:label="Search Movies"
            android:theme="@style/Theme.TMDBMovies" />
        <activity
            android:name=".ui.bookmarks.BookmarksActivity"
            android:exported="false"
            android:label="Bookmarked Movies"
            android:theme="@style/Theme.TMDBMovies" />
    </application>

</manifest>
